<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color"
    android:id="@+id/dialogLoginBadRequestPadre"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvdialogLoginBadRequestTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="ERROR DE SESION"
        android:textSize="24sp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        />

    <View
        android:layout_width="290dp"
        android:layout_height="2dp"
        android:layout_marginStart="12dp"
        android:background="@color/black" />

    <TextView
        android:id="@+id/tvdialogLoginBadRequestSpeach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_speach"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        />


    <Button
        android:id="@+id/btndialogLoginBadRequestOk"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:text="@string/ok"
        android:backgroundTint="@color/error_color"/>


</LinearLayout>