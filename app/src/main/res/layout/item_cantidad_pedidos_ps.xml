<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color"
    android:id="@+id/itemCantidadPedidosPsPadre"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCantidadPedidosPsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/cantidad_producto"
            android:textSize="24sp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            />
        <ImageButton
            android:id="@+id/ibCantidadPedidosPsClose"
            android:backgroundTint="@color/background_color"
            android:layout_marginStart="55dp"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_rounded_red_vector"/>

    </LinearLayout>

    <View
        android:layout_width="290dp"
        android:layout_height="2dp"
        android:layout_marginStart="10dp"
        android:background="@color/black" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilCantidadPedidosPsCantidad"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="250dp"
        android:hint="@string/cantidad2"
        android:layout_height="match_parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tietCantidadPedidosPsCantidad"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/btnCantidadPedidosPsGuardar"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:text="@string/guardar"
        android:backgroundTint="@color/primary_color"/>


</LinearLayout>